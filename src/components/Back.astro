---
interface Props {
    href?: string;
}

const { href } = Astro.props;

// Calculate parent path from current URL if href not provided
const getParentPath = () => {
    const path = Astro.url.pathname.replace(/\/$/, ''); // Remove trailing slash
    const segments = path.split('/').filter(Boolean);
    if (segments.length <= 1) return '/';
    return '/' + segments.slice(0, -1).join('/');
};

const backHref = href ?? getParentPath();
---

<div class="mb-6">
    <span class="font-mono opacity-50">&gt; </span>
    <a href={backHref} class="font-mono opacity-50 hover:opacity-75 transition-opacity" title="Go Back">
        cd ..
    </a>
</div>
