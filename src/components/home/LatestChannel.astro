---
import type { TelegramPost } from "../../utils/telegram";
import FormattedDate from "../FormattedDate.astro";
import SectionHeader from "./SectionHeader.astro";

interface Props {
  posts: TelegramPost[] | null;
}

const { posts } = Astro.props;
const maxMessages = 8;
const latestPosts = posts?.slice(0, maxMessages);

function getTextPreview(post: TelegramPost, maxLength = 120): string {
  const text = post.text || post.title;
  if (text.length <= maxLength) return text;
  return text.slice(0, maxLength).trim() + "…";
}

function getFirstImage(post: TelegramPost): string | null {
  // Try extracting from content HTML (images are prepended as <img> tags)
  const imgMatch = post.content.match(/<img[^>]+src="([^"]+)"/);
  if (imgMatch?.[1]) return imgMatch[1];
  // Fall back to link preview image
  if (post.linkPreview?.imageUrl) return post.linkPreview.imageUrl;
  return null;
}
---

<section class="radio-station">
  <SectionHeader title="Radio Station" moreHref="/channel" />

  {latestPosts && latestPosts.length > 0 ? (
    <div class="scroll-wrapper">
      <div class="fade-left" style="opacity:0" aria-hidden="true"></div>
      <div class="fade-right" aria-hidden="true"></div>

      <div class="scroll-track">
        {latestPosts.map((post) => {
          const img = getFirstImage(post);
          return (
            <a href={`/channel#${post.id}`} class="msg-card surface-card">
              {img && (
                <div class="msg-thumb">
                  <img src={img} alt="" loading="lazy" />
                </div>
              )}
              <p class="msg-body">{getTextPreview(post)}</p>
              <footer class="msg-footer">
                <time class="msg-date" datetime={post.datetime}>
                  <FormattedDate date={new Date(post.datetime)} />
                </time>
                {post.hashtags && post.hashtags.length > 0 && (
                  <span class="msg-tag">#{post.hashtags[0]}</span>
                )}
              </footer>
            </a>
          );
        })}

        <a href="/channel" class="msg-card surface-card card-more">
          <span class="card-more-text">More →</span>
        </a>
      </div>
    </div>
  ) : (
    <p class="station-empty">Channel unavailable</p>
  )}
</section>

<style lang="scss">
  @use "../../styles/tokens" as *;

  .radio-station {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  /* ---- Horizontal scroll ---- */

  .scroll-wrapper {
    position: relative;
    // Allow bleed past page-shell padding for edge-to-edge scroll feel
    margin-inline: calc(var(--space-1) * -1);
  }

  .fade-left,
  .fade-right {
    position: absolute;
    top: 0;
    bottom: 0;
    width: 48px;
    z-index: 2;
    pointer-events: none;
    transition: opacity 0.2s ease;
  }

  .fade-left {
    left: 0;
    background: linear-gradient(to right, var(--color-bg-page), transparent);
  }

  .fade-right {
    right: 0;
    background: linear-gradient(to left, var(--color-bg-page), transparent);
  }

  .scroll-track {
    display: flex;
    flex-direction: row;
    gap: var(--space-4);
    overflow-x: auto;
    overflow-y: hidden;
    -webkit-overflow-scrolling: touch;
    scroll-snap-type: x proximity;
    scroll-padding-inline: var(--space-4);
    padding: var(--space-2) var(--space-4);
    cursor: grab;

    // Hide scrollbar across browsers
    scrollbar-width: none;
    -ms-overflow-style: none;

    &::-webkit-scrollbar {
      display: none;
    }
  }

  /* ---- Message cards ---- */

  .msg-card {
    flex: 0 0 280px;
    min-height: 140px;
    padding: var(--space-3) var(--space-3) var(--space-3);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: var(--space-2);
    text-decoration: none;
    scroll-snap-align: start;
    box-shadow: var(--shadow-xs, 0 1px 2px rgba(0, 0, 0, 0.04));
    transition:
      border-color var(--transition-base),
      box-shadow var(--transition-base),
      transform var(--transition-base);

    &:hover {
      border-color: var(--color-border);
      box-shadow: var(--shadow-sm);
      transform: translateY(-1px);
    }
  }

  .msg-thumb {
    width: 100%;
    height: 80px;
    border-radius: var(--radius-sm, 4px);
    overflow: hidden;
    flex-shrink: 0;

    img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      display: block;
    }
  }

  .msg-body {
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
    color: var(--color-text-primary);
    margin: 0;
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .msg-footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-2);
    padding-top: var(--space-2);
    border-top: 1px solid var(--color-border-soft);
  }

  .msg-date {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
    font-weight: 500;
    font-variant-numeric: tabular-nums;
  }

  .msg-tag {
    font-size: var(--font-size-xs);
    color: var(--color-accent);
    font-weight: 500;
  }

  /* ---- "More" card ---- */

  .card-more {
    flex: 0 0 140px;
    min-height: 140px;
    align-items: center;
    justify-content: center;
    background: var(--color-bg-muted);
    border-style: dashed;
    border-color: var(--color-border);
    box-shadow: none;

    &:hover {
      background: var(--color-bg-surface);
      box-shadow: var(--shadow-xs, 0 1px 2px rgba(0, 0, 0, 0.04));
    }
  }

  .card-more-text {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--color-text-secondary);
    transition: color var(--transition-base);

    .card-more:hover & {
      color: var(--color-accent);
    }
  }

  /* ---- Empty state ---- */

  .station-empty {
    padding: var(--space-8);
    text-align: center;
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
    margin: 0;
  }
</style>

<script>
  function initScrollTrack() {
    const track = document.querySelector<HTMLElement>(".scroll-track");
    if (!track) return;

    // Prevent duplicate init on same element
    if ((track as any).__scrollInited) return;
    (track as any).__scrollInited = true;

    const wrapper = track.closest(".scroll-wrapper");
    if (!wrapper) return;

    const fadeLeft = wrapper.querySelector<HTMLElement>(".fade-left");
    const fadeRight = wrapper.querySelector<HTMLElement>(".fade-right");
    if (!fadeLeft || !fadeRight) return;

    // --- Fade visibility ---
    function updateFades() {
      const { scrollLeft, scrollWidth, clientWidth } = track!;
      const atStart = scrollLeft <= 2;
      const atEnd = scrollLeft + clientWidth >= scrollWidth - 2;

      fadeLeft!.style.opacity = atStart ? "0" : "1";
      fadeRight!.style.opacity = atEnd ? "0" : "1";
    }

    track.addEventListener("scroll", updateFades, { passive: true });
    // Catch final position after scroll-snap settles
    track.addEventListener("scrollend", updateFades, { passive: true });
    updateFades();

    // --- Shared: temporarily disable scroll-snap and re-enable after idle ---
    let snapTimer: ReturnType<typeof setTimeout> | null = null;

    function disableSnap() {
      if (snapTimer) clearTimeout(snapTimer);
      track.style.scrollSnapType = "none";
    }

    function scheduleSnapRestore(delay = 500) {
      if (snapTimer) clearTimeout(snapTimer);
      snapTimer = setTimeout(() => {
        track.style.scrollSnapType = "";
        setTimeout(updateFades, 350);
      }, delay);
    }

    // --- Wheel scroll: disable snap while wheeling ---
    track.addEventListener("wheel", () => {
      disableSnap();
      scheduleSnapRestore();
    }, { passive: true });

    // --- Drag to scroll (mouse only, touch uses native scroll) ---
    let isDown = false;
    let startX = 0;
    let startScroll = 0;
    let didDrag = false;

    track.addEventListener("mousedown", (e) => {
      if (e.button !== 0) return;
      isDown = true;
      didDrag = false;
      startX = e.pageX;
      startScroll = track.scrollLeft;
    });

    document.addEventListener("mousemove", (e) => {
      if (!isDown) return;
      const dx = e.pageX - startX;
      // Only enter drag mode after a clear threshold
      if (!didDrag && Math.abs(dx) > 5) {
        didDrag = true;
        track.style.cursor = "grabbing";
        disableSnap();
      }
      if (didDrag) {
        track.scrollLeft = startScroll - dx;
      }
    });

    document.addEventListener("mouseup", () => {
      if (!isDown) return;
      isDown = false;
      track.style.cursor = "";
      if (didDrag) {
        scheduleSnapRestore();
      }
    });

    // Capture-phase: swallow click only when a real drag happened
    track.addEventListener("click", (e) => {
      if (didDrag) {
        e.preventDefault();
        e.stopPropagation();
        didDrag = false;
      }
    }, true);

    // Prevent browser's native link/image ghost drag
    track.addEventListener("dragstart", (e) => e.preventDefault());
  }

  initScrollTrack();
  document.addEventListener("astro:page-load", initScrollTrack);
</script>
