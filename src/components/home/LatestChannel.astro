---
import type { TelegramPost } from "../../utils/telegram";
import FormattedDate from "../FormattedDate.astro";

interface Props {
  posts: TelegramPost[];
}

const { posts } = Astro.props;
const latestPosts = posts.slice(0, 5);

// Strip HTML and truncate text for preview
function getTextPreview(post: TelegramPost, maxLength = 150): string {
  const text = post.text || post.title;
  if (text.length <= maxLength) return text;
  return text.slice(0, maxLength).trim() + "...";
}
---

<section class="latest-channel">
  <div class="section-header">
    <h2 class="section-title">Telegram Channel</h2>
    <a href="/channel" class="section-link">
      â†’ More
    </a>
  </div>

  {latestPosts.length > 0 ? (
    <ul class="channel-list">
      {latestPosts.map((post) => (
        <li class="channel-item">
          <a href={`/channel#${post.id}`} class="channel-link">
            <p class="channel-text">{getTextPreview(post)}</p>
            <time class="channel-date">
              <FormattedDate date={new Date(post.datetime)} />
            </time>
          </a>
        </li>
      ))}
    </ul>
  ) : (
    <div class="channel-empty">
      <p>Channel unavailable</p>
    </div>
  )}
</section>

