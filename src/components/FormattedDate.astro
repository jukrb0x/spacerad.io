---
interface Props {
  date: Date;
  lang?: 'en' | 'zh';
}

const { date, lang = 'en' } = Astro.props;

const formatted = date.toLocaleDateString(lang === 'zh' ? 'zh-CN' : 'en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<time datetime={date.toISOString()}>
  {formatted}
</time>
