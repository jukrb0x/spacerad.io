---
import { SITE_TITLE, NAV_LINKS } from '../consts';
import { getLangFromUrl, t, getLocalizedPath } from '../utils/i18n';
import ThemeToggle from './ThemeToggle.vue';
import LanguageSwitch from './LanguageSwitch.vue';

const lang = getLangFromUrl(Astro.url);
const currentPath = Astro.url.pathname.replace(/^\/(zh)/, '') || '/';
---

<header class="sticky top-0 z-50 bg-background/90 backdrop-blur-md border-b border-border neon-border-bottom shadow-[0_2px_20px_rgba(0,212,255,0.05)]">
  <nav class="container flex items-center justify-between h-16">
    <!-- Logo with neon glow -->
    <a href={lang === 'zh' ? '/zh' : '/'} class="flex items-center gap-2 font-mono font-bold text-lg tracking-wider hover:no-underline group">
      <span class="i-ph:radio text-2xl text-accent group-hover:[filter:drop-shadow(0_0_10px_var(--color-accent-glow))] transition-all duration-300"></span>
      <span class="uppercase text-accent [text-shadow:0_0_10px_var(--color-accent-glow)]">{SITE_TITLE}</span>
    </a>

    <!-- Desktop Navigation with neon active indicators -->
    <div class="hidden md:flex items-center gap-6">
      {NAV_LINKS.map(link => {
        const isActive = currentPath === link.href || currentPath.startsWith(link.href + '/');
        return (
          <a
            href={getLocalizedPath(link.href, lang)}
            class:list={[
              'relative py-1 text-secondary hover:text-accent transition-all duration-200 font-mono text-sm tracking-wide uppercase',
              {
                'text-accent font-medium after:absolute after:bottom-0 after:left-0 after:right-0 after:h-0.5 after:bg-accent after:shadow-[0_0_10px_var(--color-accent-glow)]': isActive
              }
            ]}
          >
            {lang === 'zh' ? link.labelZh : link.label}
          </a>
        );
      })}
    </div>

    <!-- Actions with hover glow -->
    <div class="flex items-center gap-2">
      <!-- Search trigger -->
      <button
        id="search-trigger"
        class="btn-ghost p-2 rounded-lg hover-glow-icon"
        aria-label={t('search.trigger', lang)}
      >
        <span class="i-ph:magnifying-glass text-xl"></span>
      </button>

      <!-- Theme toggle -->
      <ThemeToggle client:load />

      <!-- Language switch -->
      <LanguageSwitch currentLang={lang} currentPath={currentPath} client:load />

      <!-- Mobile menu button -->
      <button
        id="mobile-menu-toggle"
        class="md:hidden btn-ghost p-2 rounded-lg hover-glow-icon"
        aria-label="Toggle menu"
      >
        <span class="i-ph:list text-xl"></span>
      </button>
    </div>
  </nav>

  <!-- Mobile Navigation -->
  <div id="mobile-menu" class="hidden md:hidden border-t border-border">
    <div class="container py-4 flex flex-col gap-2">
      {NAV_LINKS.map(link => {
        const isActive = currentPath === link.href;
        return (
          <a
            href={getLocalizedPath(link.href, lang)}
            class:list={[
              'py-2 px-4 rounded-lg text-secondary hover:text-accent hover:bg-surface-elevated transition-all duration-200 font-mono text-sm uppercase tracking-wide',
              { 'text-accent bg-surface-elevated font-medium border-l-2 border-accent': isActive }
            ]}
          >
            {lang === 'zh' ? link.labelZh : link.label}
          </a>
        );
      })}
    </div>
  </div>
</header>

<script>
  const toggle = document.getElementById('mobile-menu-toggle');
  const menu = document.getElementById('mobile-menu');

  toggle?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
