---
// Import the global styles here so that they are included on
// all pages through the use of the <BaseHead /> component.
import "../styles/global.scss";
import "katex/dist/katex.min.css";
import { ClientRouter } from "astro:transitions";
import { SITE_TITLE, SITE_SOCIAL_IMAGE } from "../consts";
// Import theme store to ensure it's always loaded
import "../stores/theme";

interface Props {
    title: string;
    description: string;
    image?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description, image = SITE_SOCIAL_IMAGE } = Astro.props;
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
<ClientRouter />

<!-- Theme initialization script (prevents FOUC) - only runs on initial load -->
<script is:inline>
    (() => {
        // Only run on initial page load, not during navigation
        if (window.__themeInitialized) return;
        window.__themeInitialized = true;

        const storageKey = "theme-preference";
        const root = document.documentElement;
        const isPreference = (value) =>
            value === "light" || value === "dark" || value === "system";

        let preference = "system";

        try {
            const stored = window.localStorage.getItem(storageKey);
            if (isPreference(stored)) {
                preference = stored;
            }
        } catch {
            /* noop */
        }

        const getSystemTheme = () => {
            if (!window.matchMedia) return "light";
            return window.matchMedia("(prefers-color-scheme: dark)").matches
                ? "dark"
                : "light";
        };

        const theme = preference === "system" ? getSystemTheme() : preference;
        root.dataset.themeMode = preference;
        root.dataset.theme = theme;
    })();
</script>

<!-- Viewport height initialization (prevents FOUC on iOS Safari) -->
<script is:inline>
    (function(){
        var vh = (window.visualViewport?.height ?? window.innerHeight) * 0.01;
        document.documentElement.style.setProperty('--vh', vh + 'px');
    })();
</script>
<script>
    import { initViewportHeight } from "../utils/viewportHeight";
    initViewportHeight();
</script>
<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link
	rel="alternate"
	type="application/rss+xml"
	title={SITE_TITLE}
	href={new URL('rss.xml', Astro.site)}
/>
<meta name="generator" content={Astro.generator} />

<!-- Font preloads -->
<link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin />

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- License -->
<link rel="license" href="https://creativecommons.org/licenses/by-nc-sa/4.0/" />
<meta name="license" content="CC BY-NC-SA 4.0" />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:site_name" content={SITE_TITLE} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />
