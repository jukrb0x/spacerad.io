---
interface Props {
  name: string;
  description: string;
  avatar: string;
  url: string;
}

const { name, description, avatar, url } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="card-neon flex items-center gap-4 hover:no-underline group"
>
  <img
    src={avatar}
    alt={name}
    class="w-14 h-14 rounded-full object-cover flex-shrink-0 border-2 border-transparent group-hover:border-accent group-hover:shadow-[0_0_15px_var(--color-accent-glow)] transition-all duration-300"
    loading="lazy"
  />
  <div class="min-w-0 flex-1">
    <h3 class="font-mono font-medium text-primary group-hover:text-accent transition-all duration-300 truncate">
      {name}
    </h3>
    <p class="text-sm text-secondary truncate">{description}</p>
  </div>
  <!-- Connection indicator -->
  <div class="flex-shrink-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300">
    <span class="i-ph:link text-accent"></span>
  </div>
</a>
