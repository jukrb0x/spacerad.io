---
interface Props {
  name: string;
  description: string;
  avatar: string;
  url: string;
}

const { name, description, avatar, url } = Astro.props;
---

<a
  href={url}
  target="_blank"
  rel="noopener noreferrer"
  class="card flex items-center gap-4 hover:border-accent hover:no-underline transition-colors group"
>
  <img
    src={avatar}
    alt={name}
    class="w-14 h-14 rounded-full object-cover flex-shrink-0"
    loading="lazy"
  />
  <div class="min-w-0 flex-1">
    <h3 class="font-medium text-primary group-hover:text-accent transition-colors truncate">
      {name}
    </h3>
    <p class="text-sm text-secondary truncate">{description}</p>
  </div>
</a>
