---
import { type CollectionEntry, render } from "astro:content";
import BlogPost from "../../layouts/BlogPost.astro";
import { getAllRenderablePosts } from "../../utils/posts";

export const prerender = true;

export async function getStaticPaths() {
    const posts = await getAllRenderablePosts();
    return posts.map((post) => ({
        params: { slug: post.id },
        props: post,
    }));
}
type Props = CollectionEntry<"blog">;

const post = Astro.props;
const { Content, headings, remarkPluginFrontmatter } = await render(post);
---

<BlogPost
    {...post.data}
    body={post.body}
    headings={headings}
    lastModified={remarkPluginFrontmatter?.lastModified}
    lastModifiedCommitUrl={remarkPluginFrontmatter?.lastModifiedCommitUrl}
>
    <Content />
</BlogPost>
